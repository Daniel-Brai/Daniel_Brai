---
import formatDate from "@/utils/formatDate";

type Props = {
  title: string;
  publishedAt: Date;
  desc?: string;
  href: string;
  fullWidth?: boolean;
};

const { title, desc, publishedAt, href, fullWidth = false } = Astro.props;
---

<a
  class={ 
    fullWidth ?
    "group flex max-w-full cursor-pointer flex-col gap-2 rounded-md border border-neutral-700 p-4 transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400":
    "group flex max-w-sm cursor-pointer flex-col gap-2 rounded-md border border-neutral-700 p-4 transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400"
  }
  href={href}
  data-astro-reload
>
  <div
    class="flex w-full flex-col justify-between gap-2 md:flex-row md:items-center"
  >
    <div class={
      desc ? "flex flex-col space-y-4" : ""
    }>
      <p class="text-neutral-100">{title}</p>
      {
        desc && (
          <p class="text-[13.5px]">{desc}</p>
        )
      }
    </div> 
    <div class="flex flex-row items-center gap-4">
      <p>{formatDate(publishedAt)}</p>

      <svg
        width="18"
        height="18"
        viewBox="0 0 18 18"
        fill="none"
        class="transition-all duration-300 group-hover:translate-x-1"
      >
        <path
          d="M5.25 12.75L12.75 5.25"
          stroke="#999999"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M5.25 5.25H12.75V12.75"
          stroke="#999999"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </div>
  </div>
</a>
