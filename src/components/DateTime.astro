---
export interface Props {
  date: Date;
  otherClasses?: string;
  label?: string;
}
const { date, label, otherClasses } = Astro.props;
---

<div title={label} class="flex items-center">
  <div>
    <svg
      class="dark:fill-white"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      ><path
        d="M3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-2V2h-2v2H9V2H7v2H5a2 2 0 0 0-2 2zm16 14H5V8h14z"
      ></path></svg
    >
  </div>
  <time
    class={otherClasses ? `ml-2 ${otherClasses}` : "text-sm ml-2"}
    datetime={date.toISOString()}
  >
    {
      date.toLocaleDateString("en-GB", {
        year: "numeric",
        month: "short",
        day: "numeric",
      })
    }
  </time>
</div>
