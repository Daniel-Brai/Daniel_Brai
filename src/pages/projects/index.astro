---
import { SITE_TITLE, SITE_CDN } from "../../consts";
import BaseHead from "../../components/BaseHead.astro";
import Projects from "../../components/Projects.astro";
import PageLayout from "../../layouts/PageLayout.astro";
import getSortedProjects from "../../utils/getSortedProjects";

import { getCollection } from "astro:content";

const projects = await getCollection("projects");
const sortedProjects = getSortedProjects(projects);
const ogImage = SITE_CDN + 'social-share.png';
---

<PageLayout>
  <BaseHead
    title={`Projects | ${SITE_TITLE}`}
    description={"Daniel's Brai Projects - Exploring different tech stacks"}
    image={ogImage}
  />
  <Fragment slot="main">
    <Projects projects={sortedProjects} />
  </Fragment>
</PageLayout>
